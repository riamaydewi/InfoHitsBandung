<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.infohitsbandung.MainActivityWisata"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="#E0F7FA">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/masjid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FCE4EC"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/imageView"
                    style="@style/menuImageFit"
                    android:src="@drawable/masjid_raya1" />

                <TextView
                    style="@style/menuText"
                    android:text="@string/mesjid" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/kawah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FCE4EC"
                android:layout_marginBottom="16dp">

                <ImageView
                    style="@style/menuImageFit"
                    android:src="@drawable/kawah_putih1" />

                <TextView
                    style="@style/menuText"
                    android:text="@string/kawah" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tangkuban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FCE4EC"
                android:layout_marginBottom="16dp">

                <ImageView
                    style="@style/menuImageFit"
                    android:src="@drawable/tangkuban_perahu1" />

                <TextView
                    style="@style/menuText"
                    android:text="@string/tangkuban" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dusun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FCE4EC"
                android:layout_marginBottom="16dp">

                <ImageView
                    style="@style/menuImageFit"
                    android:src="@drawable/dusun_bambu1" />

                <TextView
                    style="@style/menuText"
                    android:text="@string/dusun" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/deranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FCE4EC"
                android:layout_marginBottom="16dp">

                <ImageView
                    style="@style/menuImageFit"
                    android:src="@drawable/de_ranch1" />

                <TextView
                    style="@style/menuText"
                    android:text="@string/deranch" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            style="@style/menuHorizontalTransparan"
            android:onClick="Home"
            android:src="@drawable/home" />

        <ImageButton
            style="@style/menuHorizontalTransparan"
            android:src="@drawable/about"
            android:onClick="Info"/>

        <ImageButton
            style="@style/menuHorizontalTransparan"
            android:onClick="Exit"
            android:src="@drawable/exit" />

    </LinearLayout>

</RelativeLayout>